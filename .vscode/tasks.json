{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Add migration",
      "type": "shell",
      "command": "dotnet ef migrations add ${input:migrationName}",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Generate idempotent migration script",
      "type": "shell",
      "command": "dotnet ef migrations script --idempotent --output Migrations/migrate.sql",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Build frontend container image",
      "type": "shell",
      "command": "docker build -t fit-frontend ${workspaceFolder}/frontend",
      "problemMatcher": []
    },
    {
      "label": "Build backend container image",
      "type": "shell",
      "command": "docker build -t fit-backend ${workspaceFolder}/backend",
      "problemMatcher": []
    },
    {
      "label": "Build database migrate container image",
      "type": "shell",
      "command": "docker build -t fit-database-migrate -f ${workspaceFolder}/backend/Dockerfile.Database-Migrate ${workspaceFolder}/backend",
      "problemMatcher": []
    },
    {
      "label": "Run database container",
      "type": "shell",
      "command": "docker container run --name fit-database -e POSTGRES_DB=fit -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=${env:FIT_DATABASE_PASSWORD} -p 5433:5432 postgres:17-alpine",
      "problemMatcher": []
    },
    {
      "label": "Run database migrate container interactive",
      "type": "shell",
      "command": "docker container run -it --name fit-database-migrate --entrypoint sh fit-database-migrate",
      "problemMatcher": []
    },
    {
      "label": "Compose up",
      "type": "shell",
      "command": "docker compose up",
      "problemMatcher": []
    },
    {
      "label": "Compose down",
      "type": "shell",
      "command": "docker compose down",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "description": "EF Core migration name",
      "type": "promptString"
    }
  ]
}
