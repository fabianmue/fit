# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[backend/**/*Dto.cs]
dotnet_diagnostic.CS8618.severity = none # Disable warnings for non-nullable properties not initialized in DTOs